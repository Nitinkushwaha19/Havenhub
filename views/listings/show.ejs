<% layout("/layouts/boilerplate.ejs") -%>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>
</script>

<body>
  <div class="listing-section">
    <div class="listing-image">
      <img
        src="<%= listing.image.url%>"
        class="card-img-top show-img"
        alt="Listing_image"
      />
      <p class="card-text">
        <i>Owned by <%=listing.owner.username%></i>
      </p>
    </div>
    <div class="listing-details">
      <div class="card show-card listing-card">
      <h2><%=listing.title%></h2>
      <br />
        <div class="card-body">
          <p><%=listing.description%></p>
          <p>
            <b>Price :</b> &#8377; <%=listing.price.toLocaleString("en-IN")%>
          </p>
          <p><b>Location :</b> <%=listing.location%></p>
          <p><b>Country : </b><%=listing.country%></p>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
          <a
            href="/listings/<%=listing._id%>/edit"
            class="edit-btn btn btn-dark col-1 offset-3"
            >Edit</a
          >
          <form
            method="post"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button class="btn btn-dark offset-5">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <hr />

  <div class="listing-map-box">
    <div class="mapBox">
      <!-- map section -->
      <div class="col-11 mb-3 mt-3">
        <h3>Where youâ€™ll be</h3>
        <div id="map"></div>
      </div>
      <script src="/JS/map.js"></script>
    </div>
    <!-- Contact page  -->
    <hr />
    <div class="mt-4 contact-form">
      <div class="listing-owner-details">
        <h4 style="font-size: 1.5rem">
          <b>Land Lord : </b><i><%= listing.owner.username %></i>
        </h4>
        <p>
          <b>Mobile : </b> ********** <br />
          <% if(currUser) { %> 
            <b>Email :</b> <%= listing.owner.email %>
          <% } else { %>
          <b>Email :</b> **********@gmail.com
          <% } %>
        </p>
      </div>
      <hr />
      <br />
      <div class="owner-contact">
        <h3>Contact to Land Lord</h3>
        <form
          action="/listings/<%=listing._id%>/sendMail"
          method="post"
          class="needs-validation"
          novalidate
        >
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            required
          />
          <label for="email" class="form-label">Your Email</label>
          <input
            type="text"
            id="email"
            name="email"
            class="form-control"
            required
          />
          <label for="message" class="form-label">Message</label>
          <textarea
            type="text"
            id="message"
            name="message"
            class="form-control"
            required
          ></textarea>
          <br />
          <button class=" btn btn-success">Send Request</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Review Sections -->
  <% if(currUser) { %>
  <hr />
  <div class="mb-3 mt-4">
    <h3>Leave a Review</h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="rating" class="form-label" style="font-size: 1.25rem;">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 review-comment">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Comment is required!</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <% } %>

  <!-- display reviews  -->
  <% if(listing.reviews.length> 0) {%>
  <hr />
  <div class="mb-3 mt-4">
    <h3 class="mt-3 mb-4">All Reviews</h3>
    <div class="row review-section">
      <% for(let review of listing.reviews) { %>
      <div class=" review-box-card">
        <div class="card-body review-card">
          <h5 class="card-title mb-2" style="font-size: 1.25rem;"><%= review.author.username %></h5>
          <p class="starability-result " data-rating="<%=review.rating %>">
            Rated: 3 stars
          </p>
          <p class="card-text review-card-p mb-2 mt-1" style="font-size: 1rem">
            <%=review.comment %>
          </p>
          <% if(currUser && review.author._id.equals(currUser._id)) { %>
          <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE"
          >
            <button class="btn btn-sm btn-outline-dark">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</body>
