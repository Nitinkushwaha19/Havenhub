<% layout("/layouts/boilerplate") -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    margin-top: 1.5rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    font-weight: 600;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    display: flex;
    align-items: center;
    padding: 1rem;
    margin-left: 3rem;
  }
</style>



<div class="row row-cols-lg-3 row-cols-lg-2 row-cols-lg-1 mt-3">
  <% for (let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-links">
    <div class="card listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b>&#8377; <%=listing.price.toLocaleString("en-IN")%> </b> <br />
          <b> <%= listing.title %> </b> <br>
          <i class="fa-solid fa-location-dot" style="color: red;"></i>  &nbsp; <b><%= listing.location %> </b>
          <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
